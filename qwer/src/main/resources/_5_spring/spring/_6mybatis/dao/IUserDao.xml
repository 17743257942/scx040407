<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--写上全限定类名-->
<mapper namespace="_5_spring.spring._6mybatis.dao.IUserDao">

    <!--定义封装account和user的resultMap-->
    <resultMap id="accountUserMap" type="account">
        <id property="id" column="aid"></id>
        <result property="uid" column="uid"></result>
        <result property="money" column="money"></result>
        <association property="user" column="uid" javaType="_5_spring.spring._6mybatis.domain.User">
            <id property="id" column="id"/>
            <result column="username" property="username"/>
            <result column="address" property="address"/>
            <result column="sex" property="sex"/>
            <result column="birthday" property="birthday"/>
        </association>
    </resultMap>


    <!--配置查询所有 id是方法名称-->
    <select id="findAll"
            resultType="_5_spring.spring._6mybatis.domain.User">
        select * from user
    </select>
    <select id="findOne"
            resultType="_5_spring.spring._6mybatis.domain.User"
            parameterType="java.lang.Integer">
        select * from user where id=#{id}
    </select>
    <select id="findByName"
            resultType="_5_spring.spring._6mybatis.domain.User"
            parameterType="java.lang.String">
        select * from user where username like #{name}
        <!-- select * from user where username like '%${value}%' -->
    </select>

    <select id="findAll2" resultMap="accountUserMap">
        select u.*,a.id as aid,a.uid,a.money from account a,user u where
        a.uid=u.id
    </select>

    <select id="findAll3"
            resultType="_5_spring.spring._6mybatis.domain.AccountUser">
        select a.* ,u.username,u.address from account a,user u where
        a.uid=u.id
    </select>

    <!--根据vo中的条件查询-->
    <select id="findUserByVo"
            parameterType="_5_spring.spring._6mybatis.domain.QueryVo"
            resultType="_5_spring.spring._6mybatis.domain.User">
        select * from user where username like #{user.username}
    </select>

    <select id="findUserByVo2"
            parameterType="_5_spring.spring._6mybatis.domain.QueryVo"
            resultType="_5_spring.spring._6mybatis.domain.User">
        select * from user
        <where>
            <if test="ids != null and ids.size()>0">
                <foreach collection="ids" open=" and id in (" close=")"
                         item="id" separator=",">
                    #{id}
                </foreach>
            </if>
        </where>
    </select>


    <!--保存用户-->
    <insert id="saveUser"
            parameterType="_5_spring.spring._6mybatis.domain.User">
        insert into `user`(`username`,`birthday`,`sex`,`address`) values
        (#{username},#{birthday},#{sex},#{address});
    </insert>
    <!--更新用户-->
    <insert id="updateUser"
            parameterType="_5_spring.spring._6mybatis.domain.User">
        update user set
        username=#{username},birthday=#{birthday},sex=#{sex},address=#{address}
        where id=#{id}
    </insert>

    <delete id="deleteUser" parameterType="java.lang.Integer">
        delete from user where id=#{id}
    </delete>


</mapper>