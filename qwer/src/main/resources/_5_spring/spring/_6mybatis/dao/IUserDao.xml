<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--写上全限定类名-->
<mapper namespace="_5_spring.spring._6mybatis.dao.IUserDao">
    <!--配置查询所有 id是方法名称-->
    <select id="findAll"
            resultType="_5_spring.spring._6mybatis.domain.User">
        select * from user
    </select>
    <select id="findOne"
            resultType="_5_spring.spring._6mybatis.domain.User"
            parameterType="java.lang.Integer">
        select * from user where id=#{id}
    </select>
    <select id="findByName"
            resultType="_5_spring.spring._6mybatis.domain.User"
            parameterType="java.lang.String">
        select * from user where username like #{name}
        <!-- select * from user where username like '%${value}%' -->
    </select>

    <!--根据vo中的条件查询-->
    <select id="findUserByVo"
            parameterType="_5_spring.spring._6mybatis.domain.QueryVo"
            resultType="_5_spring.spring._6mybatis.domain.User">
        select * from user where username like #{user.username}
    </select>

    <!--保存用户-->
    <insert id="saveUser"
            parameterType="_5_spring.spring._6mybatis.domain.User">
        insert into `user`(`username`,`birthday`,`sex`,`address`) values
        (#{username},#{birthday},#{sex},#{address});
    </insert>
    <!--更新用户-->
    <insert id="updateUser"
            parameterType="_5_spring.spring._6mybatis.domain.User">
        update user set
        username=#{username},birthday=#{birthday},sex=#{sex},address=#{address}
        where id=#{id}
    </insert>

    <delete id="deleteUser" parameterType="java.lang.Integer">
        delete from user where id=#{id}
    </delete>


</mapper>